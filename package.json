{
  "name": "rest-fortnite-api",
  "version": "3.1.5",
  "description": "REST Fortnite API. Get stats, score, kills...",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon",
    "start": "node index.js",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && ./node_modules/.bin/codecov",
    "contrib:add": "all-contributors add",
    "contrib:build": "all-contributors generate",
    "docker-build": "docker build -t skynewz/fortnite-api:dev --no-cache .",
    "docker-run": "docker run -it --rm -p 3000:3000 --env-file=.env skynewz/fortnite-api:dev",
    "lint": "tslint --project tsconfig.json --format stylish --fix src/**/*.ts",
    "format": "prettier --write \"**/*.ts\"",
    "generate:changelog": "git changelog -f $(git describe --tags --abbrev=0) -p -x > CHANGELOG.md",
    "sonar-scanner": "sonar-scanner -Dsonar.projectVersion=$(cat VERSION) -Dsonar.typescript.lcov.reportPaths=coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SkYNewZ/rest-fornite-api.git"
  },
  "author": "Quentin LEMAIRE <quentin@lemairepro.fr>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SkYNewZ/rest-fornite-api/issues"
  },
  "homepage": "https://skynewz.github.io/rest-fornite-api",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/models/*.ts",
      "src/routes/check.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.6",
    "@types/pg": "^7.4.6",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "fortnite-api": "^2.8.0",
    "jsonwebtoken": "^8.2.1",
    "memory-cache": "^0.2.0",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "swagger-ui-express": "^3.0.8",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/expect": "^1.20.3",
    "@types/mocha": "^5.2.0",
    "all-contributors-cli": "^4.11.1",
    "angular2-uuid": "^1.1.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "codecov": "^3.0.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1",
    "prettier": "^1.12.1",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1"
  }
}
