{
  "name": "rest-fortnite-api",
  "version": "3.0.1",
  "description": "REST Fortnite API. Get stats, score, kills...",
  "main": "api.js",
  "scripts": {
    "build": "tsc",
    "start-dev": "./node_modules/.bin/ts-node src/index.ts",
    "start": "node index.js",
    "test": "./node_modules/.bin/nyc mocha",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov > coverage.lcov && ./node_modules/.bin/codecov",
    "contrib:add": "all-contributors add",
    "contrib:build": "all-contributors generate",
    "docker-build": "docker build -t skynewz/fortnite-api:dev --no-cache .",
    "docker-run": "docker run -it --rm -p 3000:3000 --env-file=.env skynewz/fortnite-api:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SkYNewZ/rest-fornite-api.git"
  },
  "author": "Quentin LEMAIRE <quentin@lemairepro.fr>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SkYNewZ/rest-fornite-api/issues"
  },
  "homepage": "https://skynewz.github.io/rest-fornite-api",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/models/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.0",
    "@types/universal-analytics": "^0.4.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-redis-cache": "^1.1.1",
    "fortnite-api": "^2.6.0",
    "memory-cache": "^0.2.0",
    "morgan": "^1.9.0",
    "swagger-ui-express": "^3.0.6",
    "typescript": "^2.8.1",
    "universal-analytics": "^0.4.16"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.4",
    "@types/expect": "^1.20.3",
    "@types/mocha": "^5.0.0",
    "all-contributors-cli": "^4.11.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "codecov": "^3.0.0",
    "eslint": "^4.19.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "ts-node": "^5.0.1",
    "uuid": "^3.2.1"
  }
}
